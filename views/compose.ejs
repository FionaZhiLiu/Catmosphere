
<%- include("partials/header"); -%>
<section class="bg-light">
  <div class="container-fluid new-post">
    <h1>Compose</h1>
    <form class="" action="/compose" method="post">
      <div class="form-group">
        <label>Category</label>
        <input class="form-control" type="text" name="postCategory" placeholder="Food/Health/Event" autocomplete="off">
        <label>Title</label>
        <input class="form-control" type="text" name="postTitle" autocomplete="off">
        <label>Post</label>
        <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>
      </div>
      <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>
    <hr>
    <a class="btn btn-dark" href="/logout" role="button">Log Out</a>
</div>
</section>
<%- include("partials/footer"); -%>
